@model Hostel2._0.Models.ViewModels.StudentMealReportViewModel
@{
    ViewData["Title"] = "Student Meal Report";
    var student = ViewBag.Student as Hostel2._0.Models.ApplicationUser;
    var currentMonth = ViewBag.CurrentMonth as DateTime?;
    var payments = ViewBag.Payments as List<Hostel2._0.Models.MealManagement.MealPayment>;
}

<div class="container-fluid manager-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Student Meal Report</h2>
        <a asp-action="MealReport" asp-route-month="@currentMonth?.ToString("yyyy-MM-dd")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Report
        </a>
    </div>
    
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card dashboard-card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Student Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-user-circle fa-5x text-muted"></i>
                        <h4 class="mt-3">@Model.StudentName</h4>
                        <p class="text-muted">@student?.Email</p>
                    </div>
                    
                    <div class="d-flex justify-content-between border-bottom py-2">
                        <span>Total Meals:</span>
                        <strong>@Model.TotalMeals</strong>
                    </div>
                    <div class="d-flex justify-content-between border-bottom py-2">
                        <span>Total Cost:</span>
                        <strong>@Model.TotalMealCost.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between border-bottom py-2">
                        <span>Total Paid:</span>
                        <strong>@Model.TotalPaid.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between pt-2">
                        <span>Balance:</span>
                        <strong class="@(Model.Balance >= 0 ? "text-success" : "text-danger")">
                            @Model.Balance.ToString("C")
                        </strong>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <div class="text-center">
                            <span class="badge rounded-pill bg-success d-block mb-1">
                                @Model.BreakfastCount
                            </span>
                            <small>Breakfast</small>
                        </div>
                        <div class="text-center">
                            <span class="badge rounded-pill bg-primary d-block mb-1">
                                @Model.LunchCount
                            </span>
                            <small>Lunch</small>
                        </div>
                        <div class="text-center">
                            <span class="badge rounded-pill bg-info d-block mb-1">
                                @Model.DinnerCount
                            </span>
                            <small>Dinner</small>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-action="RecordPayment" asp-route-id="@Model.StudentId" class="btn btn-success w-100">
                            <i class="fas fa-credit-card me-1"></i> Record Payment
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-lg-8">
            <div class="card dashboard-card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        @currentMonth?.ToString("MMMM yyyy") Meal Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Meal</th>
                                    <th>Type</th>
                                    <th class="text-end">Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.MealDetails.Any())
                                {
                                    @foreach (var meal in Model.MealDetails.OrderBy(m => m.MealDate).ThenBy(m => m.Meal.Type))
                                    {
                                        <tr>
                                            <td>@meal.MealDate.ToString("MMM dd, yyyy")</td>
                                            <td>@meal.Meal?.Name</td>
                                            <td>
                                                <span class="badge bg-@(meal.Meal?.Type == Hostel2._0.Models.Enums.MealType.Breakfast ? "success" : 
                                                                     meal.Meal?.Type == Hostel2._0.Models.Enums.MealType.Lunch ? "primary" : "info")">
                                                    @meal.Meal?.Type
                                                </span>
                                            </td>
                                            <td class="text-end">@meal.Rate.ToString("C")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-3">
                                            No meal records found for this student in the selected month.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
            <div class="card dashboard-card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Payment History</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Payment Type</th>
                                    <th>Reference</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (payments != null && payments.Any())
                                {
                                    @foreach (var payment in payments.OrderByDescending(p => p.PaymentDate))
                                    {
                                        <tr>
                                            <td>@(payment.PaymentDate.HasValue ? payment.PaymentDate.Value.ToString("MMM dd, yyyy") : "-")</td>
                                            <td>@payment.Amount.ToString("C")</td>
                                            <td>@payment.PaymentType</td>
                                            <td>@(string.IsNullOrEmpty(payment.TransactionReference) ? "-" : payment.TransactionReference)</td>
                                            <td>
                                                <span class="badge bg-@(payment.Status == Hostel2._0.Models.Enums.PaymentStatus.Completed ? "success" : "warning")">
                                                    @payment.Status
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-3">
                                            No payment records found for this student in the selected month.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 