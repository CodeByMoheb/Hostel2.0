<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hostel Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hostel2.0.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hostel Management System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.IsInRole("HostelManager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="ManagerDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Room" asp-action="Index">Rooms</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Student" asp-action="Index">Students</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Notice" asp-action="Index">Notices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Payment" asp-action="Index">Payments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Maintenance" asp-action="Index">Maintenance</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Document" asp-action="Index">Documents</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="mealDropdown" role="button" data-bs-toggle="dropdown">
                                    Meal Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Meal" asp-action="Index">Meals</a></li>
                                    <li><a class="dropdown-item" asp-controller="MealPlan" asp-action="Index">Meal Plans</a></li>
                                    <li><a class="dropdown-item" asp-controller="StudentMeal" asp-action="Index">Student Meals</a></li>
                                    <li><a class="dropdown-item" asp-controller="MealPayment" asp-action="Index">Meal Payments</a></li>
                                </ul>
                            </li>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="StudentDashboard">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="User" asp-action="Profile">My Profile</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Notice" asp-action="Index">Notices</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Payment" asp-action="Index">Payments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="MaintenanceRequest" asp-action="Index">Maintenance</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="mealDropdown" role="button" data-bs-toggle="dropdown">
                                    Meal Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Meal" asp-action="Index">My Meals</a></li>
                                    <li><a class="dropdown-item" asp-controller="MealPayment" asp-action="Index">Meal Payments</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Hostel Management System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 