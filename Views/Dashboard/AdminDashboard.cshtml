@model Hostel2._0.Models.ViewModels.DashboardViewModels.AdminDashboardViewModel
@using Hostel2._0.Models.Enums
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4 text-gray-800">Admin Dashboard</h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Hostels</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TotalHostels</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Active Hostels</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveHostels</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Pending Approvals</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.PendingApprovals</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">System Status</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <span class="badge badge-success">Online</span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-server fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Recent Subscriptions -->
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Subscriptions</h6>
                    <a asp-controller="Hostel" asp-action="Subscriptions" class="btn btn-sm btn-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentSubscriptions.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Hostel</th>
                                        <th>Plan</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>
                                        <th>Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subscription in Model.RecentSubscriptions)
                                    {
                                        <tr>
                                            <td>@subscription.Hostel?.Name</td>
                                            <td>@subscription.SubscriptionPlan?.Name</td>
                                            <td>@subscription.StartDate.ToString("MMM dd, yyyy")</td>
                                            <td>@subscription.EndDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (subscription.Status == SubscriptionStatus.Active)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Expired</span>
                                                }
                                            </td>
                                            <td>@subscription.Amount.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No recent subscriptions</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Hostel" asp-action="PendingApprovals" class="btn btn-primary btn-block">
                                <i class="fas fa-check-circle mr-2"></i> Review Pending Approvals
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Hostel" asp-action="Subscriptions" class="btn btn-success btn-block">
                                <i class="fas fa-credit-card mr-2"></i> Manage Subscriptions
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="User" asp-action="Index" class="btn btn-info btn-block">
                                <i class="fas fa-users mr-2"></i> Manage Users
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-controller="Settings" asp-action="Index" class="btn btn-warning btn-block">
                                <i class="fas fa-cog mr-2"></i> System Settings
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 