@model IEnumerable<Hostel2._0.Models.MealManagement.Meal>
@{
    ViewData["Title"] = "Meal Management";
}

<div class="container-fluid">
    <h2 class="mb-4">Meal Management</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Meals List</h6>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Meal
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="mealsTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Rate</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var meal in Model)
                        {
                            <tr>
                                <td>@meal.Name</td>
                                <td>@meal.Type</td>
                                <td>@meal.Rate.ToString("C")</td>
                                <td>
                                    @if (meal.IsActive)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@meal.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@meal.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#mealsTable').DataTable();
        });
    </script>
} 