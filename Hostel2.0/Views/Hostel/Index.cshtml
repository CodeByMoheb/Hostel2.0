@model IEnumerable<Hostel2._0.Models.Hostel>
@{
    ViewData["Title"] = "Hostels";
}
<div class="container-fluid admin-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Hostels</h2>
        <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Add Hostel</a>
    </div>
    <div class="card dashboard-card animate-fade-in">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>City</th>
                            <th>Manager</th>
                            <th>Contact</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hostel in Model)
                        {
                            <tr>
                                <td>@hostel.Name</td>
                                <td>@hostel.City</td>
                                <td>@hostel.Manager?.FirstName @hostel.Manager?.LastName</td>
                                <td>@hostel.ContactNumber</td>
                                <td>
                                    <span class="badge bg-@(hostel.IsActive ? "success" : "secondary")">
                                        @(hostel.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@hostel.Id" class="btn btn-sm btn-info me-1"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@hostel.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 