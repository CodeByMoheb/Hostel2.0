@using Microsoft.AspNetCore.Identity
@using Hostel2._0.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <span class="nav-link text-dark">Hello @User.Identity?.Name!</span>
    </li>
    <li class="nav-item">
        @if (User.IsInRole("Admin"))
        {
            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="AdminDashboard">Dashboard</a>
        }
        else if (User.IsInRole("HostelManager"))
        {
            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="ManagerDashboard">Dashboard</a>
        }
        else if (User.IsInRole("Student"))
        {
            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="StudentDashboard">Dashboard</a>
        }
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
    </li>
}
</ul> 