@model IEnumerable<Hostel2._0.Models.ApplicationUser>
@{
    ViewData["Title"] = "User Management";
}

<div class="container-fluid admin-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">User Management</h2>
        <div>
            <a asp-action="PendingApprovals" class="btn btn-warning me-2">
                <i class="fas fa-clock"></i> Pending Approvals
            </a>
        </div>
    </div>
    
    <div class="card dashboard-card mb-4 animate-fade-in">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">Filter Users</h5>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Index" asp-route-filter="All" class="btn @(ViewBag.CurrentFilter == "All" ? "btn-primary" : "btn-outline-primary")">All Users</a>
                <a asp-action="Index" asp-route-filter="Admin" class="btn @(ViewBag.CurrentFilter == "Admin" ? "btn-primary" : "btn-outline-primary")">Admins</a>
                <a asp-action="Index" asp-route-filter="HostelManager" class="btn @(ViewBag.CurrentFilter == "HostelManager" ? "btn-primary" : "btn-outline-primary")">Hostel Managers</a>
                <a asp-action="Index" asp-route-filter="Student" class="btn @(ViewBag.CurrentFilter == "Student" ? "btn-primary" : "btn-outline-primary")">Students</a>
            </div>
        </div>
    </div>
    
    <div class="card dashboard-card animate-fade-in">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Hostel</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>@user.Hostel?.Name</td>
                                <td>
                                    <span class="badge bg-@(user.IsActive ? "success" : "warning")">
                                        @(user.IsActive ? "Active" : "Pending")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info me-1">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    
                                    @if (!user.IsActive)
                                    {
                                        <form asp-action="Approve" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success me-1">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                        
                                        <form asp-action="Reject" asp-route-id="@user.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 