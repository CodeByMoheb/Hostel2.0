@model Hostel2._0.Models.MealManagement.Meal
@{
    ViewData["Title"] = "Meal Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 text-gray-800">Meal Details</h1>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">
                        <i class="fas fa-edit mr-2"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Name</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">@Model.Type</dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@Model.Description</dd>

                                <dt class="col-sm-4">Price</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                                <dt class="col-sm-4">Status</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge badge-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Inactive</span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Created At</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                                <dt class="col-sm-4">Last Updated</dt>
                                <dd class="col-sm-8">
                                    @if (Model.UpdatedAt.HasValue)
                                    {
                                        @Model.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span>Never</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 