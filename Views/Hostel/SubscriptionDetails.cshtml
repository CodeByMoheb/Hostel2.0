@model Hostel2._0.Models.ViewModels.SubscriptionDetailsViewModel
@{
    ViewData["Title"] = "Subscription Details";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Subscription Details</h1>
        <a asp-controller="Dashboard" asp-action="ManagerDashboard" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Current Subscription</h6>
                    @if (Model.Subscription != null)
                    {
                        <a asp-controller="Hostel" asp-action="ChooseSubscription" class="btn btn-primary btn-sm">
                            <i class="fas fa-sync-alt me-1"></i> Change Plan
                        </a>
                    }
                </div>
                <div class="card-body">
                    @if (Model.Subscription == null)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-exclamation-circle fa-4x text-warning mb-3"></i>
                            <h4>No Active Subscription</h4>
                            <p class="text-muted mb-4">You currently don't have an active subscription plan.</p>
                            <a asp-controller="Hostel" asp-action="ChooseSubscription" class="btn btn-primary">
                                <i class="fas fa-shopping-cart me-1"></i> Choose a Subscription Plan
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h5 class="font-weight-bold">Plan Details</h5>
                                    <hr>
                                    <div class="row mb-2">
                                        <div class="col-md-4 text-muted">Plan Name:</div>
                                        <div class="col-md-8 font-weight-bold">@Model.Subscription.SubscriptionPlan.Name</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-md-4 text-muted">Billing Cycle:</div>
                                        <div class="col-md-8">@Model.Subscription.BillingCycle</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-md-4 text-muted">Amount:</div>
                                        <div class="col-md-8">$@Model.Subscription.Amount</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-md-4 text-muted">Status:</div>
                                        <div class="col-md-8">
                                            <span class="badge bg-@(Model.Subscription?.Status == Hostel2._0.Models.Enums.SubscriptionStatus.Active ? "success" : "danger")">
                                                @Model.Subscription?.Status
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <h5 class="font-weight-bold">Features</h5>
                                    <hr>
                                    <ul class="list-unstyled">
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Up to @Model.Subscription?.SubscriptionPlan?.MaxStudents students
                                        </li>
                                        <li class="mb-2">
                                            <i class="fas fa-check-circle text-success me-2"></i> Up to @Model.Subscription?.SubscriptionPlan?.MaxRooms rooms
                                        </li>
                                        @if (Model.Subscription?.SubscriptionPlan?.IncludesMealManagement == true)
                                        {
                                            <li class="mb-2">
                                                <i class="fas fa-check-circle text-success me-2"></i> Meal Management
                                            </li>
                                        }
                                        @if (Model.Subscription?.SubscriptionPlan?.IncludesPaymentManagement == true)
                                        {
                                            <li class="mb-2">
                                                <i class="fas fa-check-circle text-success me-2"></i> Payment Management
                                            </li>
                                        }
                                        @if (Model.Subscription?.SubscriptionPlan?.IncludesReporting == true)
                                        {
                                            <li class="mb-2">
                                                <i class="fas fa-check-circle text-success me-2"></i> Advanced Reporting
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card bg-light mb-4">
                                    <div class="card-body">
                                        <h5 class="font-weight-bold">Subscription Timeline</h5>
                                        <hr>
                                        <div class="row mb-2">
                                            <div class="col-md-4 text-muted">Start Date:</div>
                                            <div class="col-md-8">@Model.Subscription.StartDate.ToString("MMM dd, yyyy")</div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-4 text-muted">End Date:</div>
                                            <div class="col-md-8">@Model.Subscription.EndDate.ToString("MMM dd, yyyy")</div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-md-4 text-muted">Days Left:</div>
                                            <div class="col-md-8">
                                                @{
                                                    var daysLeft = (Model.Subscription.EndDate - DateTime.Now).Days;
                                                }
                                                @if (daysLeft > 30)
                                                {
                                                    <span class="text-success">@daysLeft days</span>
                                                }
                                                else if (daysLeft > 7)
                                                {
                                                    <span class="text-warning">@daysLeft days</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">@daysLeft days</span>
                                                }
                                            </div>
                                        </div>

                                        @if ((Model.Subscription.EndDate - DateTime.Now).Days < 30)
                                        {
                                            <div class="alert alert-warning mt-3">
                                                <i class="fas fa-exclamation-triangle me-2"></i>
                                                Your subscription will expire soon. Please renew to avoid any interruption in service.
                                            </div>
                                            <div class="text-center mt-3">
                                                <a asp-controller="Hostel" asp-action="ChooseSubscription" class="btn btn-warning">
                                                    <i class="fas fa-sync-alt me-1"></i> Renew Subscription
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="font-weight-bold">Payment Information</h5>
                                        <hr>
                                        @if (!string.IsNullOrEmpty(Model.Subscription.TransactionId))
                                        {
                                            <div class="row mb-2">
                                                <div class="col-md-4 text-muted">Transaction ID:</div>
                                                <div class="col-md-8">@Model.Subscription.TransactionId</div>
                                            </div>
                                        }
                                        @if (Model.Subscription.PaymentMethod.HasValue)
                                        {
                                            <div class="row mb-2">
                                                <div class="col-md-4 text-muted">Payment Method:</div>
                                                <div class="col-md-8">@Model.Subscription.PaymentMethod.Value</div>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Subscription.InvoiceId))
                                        {
                                            <div class="row mb-2">
                                                <div class="col-md-4 text-muted">Invoice ID:</div>
                                                <div class="col-md-8">@Model.Subscription.InvoiceId</div>
                                            </div>
                                            <div class="text-center mt-3">
                                                <a href="#" class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-file-invoice me-1"></i> View Invoice
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 