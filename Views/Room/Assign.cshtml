@model Hostel2._0.Models.Room

@{
    ViewData["Title"] = "Assign Students to Room";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Assign Students to Room @Model.RoomNumber</h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Room Details
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Room Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.Type</dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Capacity</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.Students.Count >= Model.Capacity)
                            {
                                <span class="badge bg-danger">Full</span>
                            }
                            else if (Model.Students.Count > 0)
                            {
                                <span class="badge bg-warning">Partially Occupied</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Available</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Available Students</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.AvailableStudents != null && ((List<Student>)ViewBag.AvailableStudents).Any())
                    {
                        @if (Model.Students.Count < Model.Capacity)
                        {
                            <form asp-action="Assign" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <div class="table-responsive">
                                    <table class="table table-striped" id="studentsTable">
                                        <thead>
                                            <tr>
                                                <th>Select</th>
                                                <th>Name</th>
                                                <th>Student ID</th>
                                                <th>Contact</th>
                                                <th>Email</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var student in (List<Student>)ViewBag.AvailableStudents)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" name="studentId" value="@student.Id" />
                                                        </div>
                                                    </td>
                                                    <td>@student.Name</td>
                                                    <td>@student.StudentId</td>
                                                    <td>@student.PhoneNumber</td>
                                                    <td>@student.Email</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="form-group mt-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-user-plus"></i> Assign Selected Student
                                    </button>
                                </div>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                This room is at full capacity (@Model.Students.Count / @Model.Capacity).
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">No available students to assign.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                "order": [[1, "asc"]],
                "pageLength": 10,
                "language": {
                    "search": "Search students:"
                }
            });
        });
    </script>
} 