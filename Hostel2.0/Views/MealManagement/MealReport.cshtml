@model Hostel2._0.Models.ViewModels.MealReportViewModel
@{
    ViewData["Title"] = "Meal Report";
}

<div class="container-fluid">
    <h2 class="mb-4">Meal Report</h2>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Monthly Meal Report</h6>
        </div>
        <div class="card-body">
            <form asp-action="MealReport" method="get" class="mb-4">
                <div class="form-group">
                    <label asp-for="Month" class="control-label">Select Month</label>
                    <input asp-for="Month" class="form-control" type="month" />
                </div>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Generate Report
                </button>
            </form>

            <div class="table-responsive">
                <table class="table table-bordered" id="mealReportTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Student Name</th>
                            <th>Total Meals</th>
                            <th>Breakfast</th>
                            <th>Lunch</th>
                            <th>Dinner</th>
                            <th>Total Cost</th>
                            <th>Total Paid</th>
                            <th>Balance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var report in Model.StudentReports)
                        {
                            <tr>
                                <td>@report.StudentName</td>
                                <td>@report.TotalMeals</td>
                                <td>@report.BreakfastCount</td>
                                <td>@report.LunchCount</td>
                                <td>@report.DinnerCount</td>
                                <td>@report.TotalMealCost.ToString("C")</td>
                                <td>@report.TotalPaid.ToString("C")</td>
                                <td class="@(report.Balance < 0 ? "text-danger" : "text-success")">
                                    @report.Balance.ToString("C")
                                </td>
                                <td>
                                    <a asp-action="StudentMealDetails" asp-route-studentId="@report.StudentId" 
                                       asp-route-month="@Model.Month.ToString("yyyy-MM")" 
                                       class="btn btn-sm btn-info">
                                        <i class="fas fa-list"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#mealReportTable').DataTable({
                order: [[1, 'desc']]
            });
        });
    </script>
} 