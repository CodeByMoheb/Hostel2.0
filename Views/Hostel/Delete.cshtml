@model Hostel2._0.Models.Hostel
@{
    ViewData["Title"] = "Delete Hostel";
}
<div class="container-fluid admin-dashboard">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card dashboard-card animate-fade-in">
                <div class="card-body">
                    <h3 class="mb-4 text-danger">Delete Hostel</h3>
                    <div class="alert alert-warning">
                        <strong>Are you sure you want to delete this hostel?</strong>
                    </div>
                    <dl class="row mb-4">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>
                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">@Model.City</dd>
                        <dt class="col-sm-4">Manager</dt>
                        <dd class="col-sm-8">@Model.Manager?.FirstName @Model.Manager?.LastName</dd>
                        <dt class="col-sm-4">Contact</dt>
                        <dd class="col-sm-8">@Model.ContactNumber</dd>
                    </dl>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 