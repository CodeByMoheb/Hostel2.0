@model Hostel2._0.Models.ViewModels.MealReportViewModel
@{
    ViewData["Title"] = "Meal Report";
    DateTime currentMonth = ViewBag.CurrentMonth;
    DateTime? previousMonth = ViewBag.PreviousMonth;
    DateTime? nextMonth = ViewBag.NextMonth;
}

<div class="container-fluid manager-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Monthly Meal Report</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Meals
        </a>
    </div>
    
    <div class="card dashboard-card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="card-title mb-0">@currentMonth.ToString("MMMM yyyy") Report</h5>
                <div>
                    @if (previousMonth.HasValue)
                    {
                        <a asp-action="MealReport" asp-route-month="@previousMonth.Value.ToString("yyyy-MM-dd")" class="btn btn-outline-primary me-2">
                            <i class="fas fa-arrow-left"></i> Previous Month
                        </a>
                    }
                    
                    @if (nextMonth.HasValue)
                    {
                        <a asp-action="MealReport" asp-route-month="@nextMonth.Value.ToString("yyyy-MM-dd")" class="btn btn-outline-primary">
                            Next Month <i class="fas fa-arrow-right"></i>
                        </a>
                    }
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4">
                    <div class="card bg-success text-white mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-utensils me-2"></i> Total Meals</h5>
                            <h2 class="mb-0">@Model.StudentReports.Sum(r => r.TotalMeals)</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-primary text-white mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-dollar-sign me-2"></i> Total Cost</h5>
                            <h2 class="mb-0">@Model.StudentReports.Sum(r => r.TotalMealCost).ToString("C")</h2>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-info text-white mb-3">
                        <div class="card-body">
                            <h5 class="card-title"><i class="fas fa-credit-card me-2"></i> Total Paid</h5>
                            <h2 class="mb-0">@Model.StudentReports.Sum(r => r.TotalPaid).ToString("C")</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="card dashboard-card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Student Meal Details</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Student</th>
                            <th class="text-center">Breakfast</th>
                            <th class="text-center">Lunch</th>
                            <th class="text-center">Dinner</th>
                            <th class="text-center">Total Meals</th>
                            <th class="text-end">Meal Cost</th>
                            <th class="text-end">Total Paid</th>
                            <th class="text-end">Balance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.StudentReports.Any())
                        {
                            @foreach (var report in Model.StudentReports.OrderBy(r => r.StudentName))
                            {
                                <tr>
                                    <td>@report.StudentName</td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill bg-success">
                                            @report.BreakfastCount
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill bg-primary">
                                            @report.LunchCount
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill bg-info">
                                            @report.DinnerCount
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <strong>@report.TotalMeals</strong>
                                    </td>
                                    <td class="text-end">@report.TotalMealCost.ToString("C")</td>
                                    <td class="text-end">@report.TotalPaid.ToString("C")</td>
                                    <td class="text-end">
                                        <span class="@(report.Balance >= 0 ? "text-success" : "text-danger")">
                                            @report.Balance.ToString("C")
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="StudentReport" asp-route-id="@report.StudentId" asp-route-month="@currentMonth.ToString("yyyy-MM-dd")"
                                               class="btn btn-sm btn-info me-1">
                                                <i class="fas fa-file-alt"></i> Details
                                            </a>
                                            <a asp-action="RecordPayment" asp-route-id="@report.StudentId"
                                               class="btn btn-sm btn-success">
                                                <i class="fas fa-credit-card"></i> Add Payment
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                                        <h5>No meal records found for this month</h5>
                                        <p class="text-muted">Start recording meals for students or select a different month.</p>
                                        <a asp-action="RecordMeals" class="btn btn-primary mt-2">
                                            <i class="fas fa-clipboard-list me-1"></i> Record Meals
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Additional JavaScript if needed
        });
    </script>
} 