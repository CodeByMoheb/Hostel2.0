@model IEnumerable<Hostel2._0.Models.MealManagement.MealPayment>
@{
    ViewData["Title"] = "Meal Payments";
}

<div class="container mt-4">
    <h2>My Meal Payments</h2>
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Type</th>
                <th>Transaction</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var payment in Model)
        {
            <tr>
                <td>@payment.PaymentDate?.ToString("yyyy-MM-dd")</td>
                <td>@payment.Amount.ToString("C")</td>
                <td>@payment.Status</td>
                <td>@payment.Type</td>
                <td>@payment.TransactionId</td>
            </tr>
        }
        </tbody>
    </table>
</div> 