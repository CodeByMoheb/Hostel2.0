@model Hostel2._0.Models.ViewModels.DashboardViewModels.ManagerDashboardViewModel
@using Hostel2._0.Models.Enums

@{
    ViewData["Title"] = "Manager Dashboard";
}

<div style="color: red; font-size: 2rem; font-weight: bold;">DEBUG: THIS IS THE MANAGER DASHBOARD VIEW</div>

<div class="container-fluid py-4">
    @if (Model.Hostel == null)
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="mb-4">Welcome to Hostel2.0!</h3>
                        <p class="lead mb-4">You haven't created a hostel yet. Get started by creating your first hostel.</p>
                        <a asp-controller="Hostel" asp-action="Create" class="btn btn-primary btn-lg">
                            <i class="fas fa-building me-2"></i> Create New Hostel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (!Model.Hostel.IsActive)
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h3 class="mb-4">Hostel Pending Approval</h3>
                        <p class="lead mb-4">Your hostel "@Model.Hostel.Name" is waiting for admin approval.</p>
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            You'll be notified once your hostel is approved.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Quick Actions Card -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="mb-0 font-weight-bold text-primary">@Model.Hostel.Name</h4>
                            <span class="badge bg-success">Active</span>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <p><i class="fas fa-map-marker-alt me-2"></i>@Model.Hostel.Address</p>
                                <p><i class="fas fa-phone me-2"></i>@Model.Hostel.ContactNumber</p>
                            </div>
                            <div class="col-md-6 text-md-end">
                                <p><i class="fas fa-envelope me-2"></i>@Model.Hostel.Email</p>
                                <p><i class="fas fa-key me-2"></i>Join Code: <strong>@Model.Hostel.JoinCode</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0 bg-light">
                    <div class="card-body d-flex flex-wrap align-items-center justify-content-between">
                        <h4 class="mb-0 font-weight-bold text-primary">Quick Actions</h4>
                        <div class="d-flex flex-wrap gap-2">
                            <a asp-controller="Room" asp-action="Create" class="btn btn-success btn-lg mx-1 mb-2">
                                <i class="fas fa-door-open me-2"></i> Add Room
                            </a>
                            <a asp-controller="Student" asp-action="Create" class="btn btn-primary btn-lg mx-1 mb-2">
                                <i class="fas fa-user-plus me-2"></i> Add Student
                            </a>
                            <a asp-controller="Meal" asp-action="Create" class="btn btn-info btn-lg mx-1 mb-2">
                                <i class="fas fa-utensils me-2"></i> Add Meal
                            </a>
                            <a asp-controller="MealPlan" asp-action="Create" class="btn btn-warning btn-lg mx-1 mb-2">
                                <i class="fas fa-clipboard-list me-2"></i> Create Meal Plan
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3 col-6">
                <div class="card text-white bg-primary shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="display-6"><i class="fas fa-door-open"></i></div>
                        <h5 class="card-title mt-2">Total Rooms</h5>
                        <h2 class="fw-bold">@Model.TotalRooms</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card text-white bg-success shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="display-6"><i class="fas fa-users"></i></div>
                        <h5 class="card-title mt-2">Total Students</h5>
                        <h2 class="fw-bold">@Model.TotalStudents</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card text-white bg-info shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="display-6"><i class="fas fa-utensils"></i></div>
                        <h5 class="card-title mt-2">Active Meals</h5>
                        <h2 class="fw-bold">@Model.Meals.Count</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6">
                <div class="card text-white bg-warning shadow-sm border-0">
                    <div class="card-body text-center">
                        <div class="display-6"><i class="fas fa-clipboard-list"></i></div>
                        <h5 class="card-title mt-2">Meal Plans</h5>
                        <h2 class="fw-bold">@Model.MealPlans.Count</h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content Grid -->
        <div class="row g-4">
            <!-- Recent Rooms -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <span>Recent Rooms</span>
                        <a asp-controller="Room" asp-action="Create" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-plus"></i> Add Room
                        </a>
                        <a asp-controller="Room" asp-action="Index" class="btn btn-outline-light btn-sm">View All</a>
                    </div>
                    <div class="card-body p-2">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Room #</th>
                                        <th>Type</th>
                                        <th>Capacity</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var room in Model.Rooms)
                                    {
                                        <tr>
                                            <td>@room.RoomNumber</td>
                                            <td>@room.Type</td>
                                            <td>@room.Capacity</td>
                                            <td>
                                                @if (room.CurrentOccupancy == room.Capacity)
                                                {
                                                    <span class="badge bg-danger">Full</span>
                                                }
                                                else if (room.CurrentOccupancy > 0)
                                                {
                                                    <span class="badge bg-warning text-dark">Partially Occupied</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">Available</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Recent Students -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <span>Recent Students</span>
                        <a asp-controller="Student" asp-action="Create" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-plus"></i> Add Student
                        </a>
                        <a asp-controller="Student" asp-action="Index" class="btn btn-outline-light btn-sm">View All</a>
                    </div>
                    <div class="card-body p-2">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Student ID</th>
                                        <th>Room</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Name</td>
                                            <td>@student.StudentId</td>
                                            <td>@(student.Room?.RoomNumber ?? "Not Assigned")</td>
                                            <td>
                                                @if (student.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Inactive</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Meal Management Section -->
        <div class="row g-4 mt-2">
            <!-- Active Meals -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <span>Active Meals</span>
                        <a asp-controller="Meal" asp-action="Create" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-plus"></i> Add Meal
                        </a>
                        <a asp-controller="Meal" asp-action="Index" class="btn btn-outline-light btn-sm">View All</a>
                    </div>
                    <div class="card-body p-2">
                        @if (Model.Meals.Any())
                        {
                            <div class="list-group">
                                @foreach (var meal in Model.Meals)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@meal.Name</h6>
                                            <small>@meal.Type</small>
                                        </div>
                                        <p class="mb-1">@meal.Description</p>
                                        <small class="text-muted">Price: @meal.Price.ToString("C")</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No active meals</p>
                        }
                    </div>
                </div>
            </div>
            <!-- Meal Plans -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <span>Meal Plans</span>
                        <a asp-controller="MealPlan" asp-action="Create" class="btn btn-light btn-sm me-2">
                            <i class="fas fa-plus"></i> Create Plan
                        </a>
                        <a asp-controller="MealPlan" asp-action="Index" class="btn btn-outline-dark btn-sm">View All</a>
                    </div>
                    <div class="card-body p-2">
                        @if (Model.MealPlans.Any())
                        {
                            <div class="list-group">
                                @foreach (var plan in Model.MealPlans)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@plan.Name</h6>
                                            <small>@plan.Price.ToString("C")</small>
                                        </div>
                                        <p class="mb-1">@plan.Description</p>
                                        <small class="text-muted">Duration: @plan.Duration days</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No meal plans available</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Notices and Payments -->
        <div class="row g-4 mt-2">
            <!-- Recent Notices -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
                        <span>Recent Notices</span>
                        <a asp-controller="Notice" asp-action="Index" class="btn btn-outline-light btn-sm">View All</a>
                    </div>
                    <div class="card-body p-2">
                        @if (Model.RecentNotices.Any())
                        {
                            <div class="list-group">
                                @foreach (var notice in Model.RecentNotices)
                                {
                                    <a href="#" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@notice.Title</h6>
                                            <small>@notice.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <p class="mb-1">@notice.Content</p>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No recent notices</p>
                        }
                    </div>
                </div>
            </div>
            <!-- Recent Payments -->
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <span>Recent Payments</span>
                        <a asp-controller="Payment" asp-action="Index" class="btn btn-outline-light btn-sm">View All</a>
                    </div>
                    <div class="card-body p-2">
                        @if (Model.RecentPayments.Any())
                        {
                            <div class="list-group">
                                @foreach (var payment in Model.RecentPayments)
                                {
                                    <a href="#" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@payment.User?.FullName</h6>
                                            <small>@payment.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </div>
                                        <p class="mb-1">@payment.Amount.ToString("C") - @payment.Status</p>
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No recent payments</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize any charts or data tables here
        $(document).ready(function () {
            // Add your JavaScript code here
        });
    </script>
} 