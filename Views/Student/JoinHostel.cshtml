@{
    ViewData["Title"] = "Join Hostel";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="text-center font-weight-light my-2">
                        <i class="fas fa-home"></i> Join Hostel
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        Enter the join code provided by your hostel manager to join the hostel.
                    </div>

                    <form asp-action="Join" asp-controller="Hostel" method="post">
                        @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
                        {
                            <div class="alert alert-danger">
                                <i class="fas fa-exclamation-circle"></i>
                                @ViewData["ErrorMessage"]
                            </div>
                        }

                        <div class="form-floating mb-3">
                            <input class="form-control" id="joinCode" name="joinCode" type="text" 
                                   placeholder="Enter join code" required maxlength="8" style="text-transform: uppercase;" />
                            <label for="joinCode">Join Code</label>
                        </div>

                        <div class="d-flex align-items-center justify-content-center mt-4 mb-0">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Join Hostel
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small">
                        <a asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .form-floating input:focus {
            border-color: #4e73df;
            box-shadow: 0 0 0 0.25rem rgba(78, 115, 223, 0.25);
        }
        
        .btn-primary {
            padding: 0.75rem 2rem;
        }
    </style>
} 