@model IEnumerable<Hostel2._0.Models.Student>
@{
    ViewData["Title"] = "Student Management";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Student Management</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add New Student
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped" id="studentsTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Student ID</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Room</th>
                            <th>Registration Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.FullName</td>
                                <td>@student.StudentId</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNumber</td>
                                <td>@(student.Room?.RoomNumber ?? "Not Assigned")</td>
                                <td>
                                    @if (student.IsManagerCreated)
                                    {
                                        <span class="badge bg-info">Manager Created</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">Self Registered</span>
                                    }
                                </td>
                                <td>
                                    @if (student.IsApproved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pending Approval</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary btn-sm">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        @if (!student.IsApproved)
                                        {
                                            <form asp-action="ApproveStudent" asp-route-id="@student.Id" method="post" style="display: inline;">
                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Are you sure you want to approve this student?')">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                            </form>
                                        }
                                        @if (student.Room == null)
                                        {
                                            <a asp-action="AssignRoom" asp-route-id="@student.Id" class="btn btn-warning btn-sm">
                                                <i class="fas fa-bed"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable();
        });
    </script>
} 