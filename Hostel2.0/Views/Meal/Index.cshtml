@model IEnumerable<Hostel2._0.Models.MealManagement.Meal>
@{
    ViewData["Title"] = "Meals";
}

<div class="container-fluid manager-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Meal Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Meal
        </a>
    </div>
    
    <div class="card dashboard-card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Rate</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if(Model != null && Model.Any())
                        {
                            @foreach (var meal in Model)
                            {
                                <tr>
                                    <td>@meal.Name</td>
                                    <td>
                                        <span class="badge bg-@(meal.Type == Hostel2._0.Models.Enums.MealType.Breakfast ? "success" : 
                                                             meal.Type == Hostel2._0.Models.Enums.MealType.Lunch ? "primary" : "info")">
                                            @meal.Type
                                        </span>
                                    </td>
                                    <td>@meal.Rate.ToString("C")</td>
                                    <td>@(string.IsNullOrEmpty(meal.Description) ? "-" : meal.Description)</td>
                                    <td>
                                        <span class="badge bg-@(meal.IsActive ? "success" : "danger")">
                                            @(meal.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@meal.Id" class="btn btn-sm btn-info me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@meal.Id" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-4">
                                    <div class="d-flex flex-column align-items-center">
                                        <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                                        <h5>No meals found</h5>
                                        <p class="text-muted">Create your first meal to get started.</p>
                                        <a asp-action="Create" class="btn btn-primary mt-2">
                                            <i class="fas fa-plus"></i> Add Meal
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Meal Plan</h5>
                    <p>Set up your monthly meal plan with rates for breakfast, lunch, and dinner.</p>
                    <a asp-action="MealPlan" class="btn btn-outline-primary">
                        <i class="fas fa-calendar-alt me-1"></i> Manage Meal Plan
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Record Meals</h5>
                    <p>Record daily student meals and manage meal attendance.</p>
                    <a asp-action="RecordMeals" class="btn btn-outline-primary">
                        <i class="fas fa-clipboard-list me-1"></i> Record Student Meals
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 