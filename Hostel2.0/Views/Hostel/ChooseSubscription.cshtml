@model Hostel2._0.Models.ViewModels.ChooseSubscriptionViewModel
@{
    ViewData["Title"] = "Choose Subscription Plan";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Choose Subscription Plan</h1>
        <a asp-controller="Dashboard" asp-action="ManagerDashboard" class="btn btn-sm btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-md-12 mb-4">
            <div class="card shadow">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Select a Plan for @Model.HostelName</h6>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="fas fa-crown fa-3x text-warning mb-3"></i>
                        <h5>Choose the right plan for your hostel</h5>
                        <p class="text-muted">All plans include core features like student management, room allocation, and basic reporting.</p>
                    </div>

                    <div class="row">
                        @foreach (var plan in Model.SubscriptionPlans)
                        {
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100 @(plan.Name.Contains("Premium") ? "border-primary" : "")">
                                    <div class="card-header @(plan.Name.Contains("Premium") ? "bg-primary text-white" : "")">
                                        <h5 class="card-title mb-0">@plan.Name</h5>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <div class="mb-4">
                                            <h2 class="display-4 text-center">
                                                $@plan.MonthlyPrice<span class="fs-6">/month</span>
                                            </h2>
                                            <p class="text-center text-muted">or $@plan.YearlyPrice yearly (save @(Math.Round((1 - plan.YearlyPrice / (plan.MonthlyPrice * 12)) * 100))%)</p>
                                        </div>

                                        <ul class="list-unstyled mb-4">
                                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Up to @plan.MaxStudents students</li>
                                            <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Up to @plan.MaxRooms rooms</li>
                                            @if (plan.IncludesMealManagement)
                                            {
                                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Meal Management</li>
                                            }
                                            @if (plan.IncludesPaymentManagement)
                                            {
                                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Payment Management</li>
                                            }
                                            @if (plan.IncludesAttendanceTracking)
                                            {
                                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Attendance Tracking</li>
                                            }
                                            @if (plan.IncludesReporting)
                                            {
                                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> Advanced Reporting</li>
                                            }
                                            @if (plan.IncludesAPIAccess)
                                            {
                                                <li class="mb-2"><i class="fas fa-check text-success me-2"></i> API Access</li>
                                            }
                                        </ul>

                                        <p class="text-muted mb-4">@plan.Description</p>

                                        <div class="mt-auto">
                                            <form asp-action="Subscribe" method="post">
                                                <input type="hidden" name="hostelId" value="@Model.HostelId" />
                                                <input type="hidden" name="planId" value="@plan.Id" />
                                                
                                                <div class="form-group mb-3">
                                                    <select name="billingCycle" class="form-select">
                                                        <option value="0">Monthly - $@plan.MonthlyPrice/month</option>
                                                        <option value="1">Yearly - $@plan.YearlyPrice/year (Save @(Math.Round((1 - plan.YearlyPrice / (plan.MonthlyPrice * 12)) * 100))%)</option>
                                                    </select>
                                                </div>
                                                
                                                <button type="submit" class="btn @(plan.Name.Contains("Premium") ? "btn-primary" : "btn-outline-primary") w-100">
                                                    Select Plan
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 