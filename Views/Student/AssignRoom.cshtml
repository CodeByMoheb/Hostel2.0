@model Hostel2._0.Models.Student

@{
    ViewData["Title"] = "Assign Room to Student";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Assign Room to @Model.Name</h1>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Student Details
        </a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Student Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Student ID</dt>
                        <dd class="col-sm-8">@Model.StudentId</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Available Rooms</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.AvailableRooms != null && ((List<Room>)ViewBag.AvailableRooms).Any())
                    {
                        <form asp-action="AssignRoom" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="table-responsive">
                                <table class="table table-striped" id="roomsTable">
                                    <thead>
                                        <tr>
                                            <th>Select</th>
                                            <th>Room Number</th>
                                            <th>Type</th>
                                            <th>Floor</th>
                                            <th>Capacity</th>
                                            <th>Occupancy</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var room in (List<Room>)ViewBag.AvailableRooms)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="radio" name="roomId" value="@room.Id" />
                                                    </div>
                                                </td>
                                                <td>@room.RoomNumber</td>
                                                <td>@room.Type</td>
                                                <td>@room.Floor</td>
                                                <td>@room.Capacity</td>
                                                <td>@room.Occupants.Count / @room.Capacity</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-bed"></i> Assign Selected Room
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted">No available rooms to assign.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#roomsTable').DataTable({
                "order": [[1, "asc"]],
                "pageLength": 10,
                "language": {
                    "search": "Search rooms:"
                }
            });
        });
    </script>
} 