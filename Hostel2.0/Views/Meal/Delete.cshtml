@model Hostel2._0.Models.MealManagement.Meal
@{
    ViewData["Title"] = "Delete Meal";
}

<div class="container-fluid manager-dashboard">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Delete Meal</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
    
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card dashboard-card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Are you sure you want to delete this meal?</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i> This action cannot be undone. Deleting this meal will remove it from all records.
                    </div>
                    
                    <dl class="row mt-4">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>
                        
                        <dt class="col-sm-3">Type</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.Type == Hostel2._0.Models.Enums.MealType.Breakfast ? "success" : 
                                             Model.Type == Hostel2._0.Models.Enums.MealType.Lunch ? "primary" : "info")">
                                @Model.Type
                            </span>
                        </dd>
                        
                        <dt class="col-sm-3">Rate</dt>
                        <dd class="col-sm-9">@Model.Rate.ToString("C")</dd>
                        
                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "-" : Model.Description)</dd>
                        
                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                        
                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                    
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancel</a>
                            <button type="submit" class="btn btn-danger">Confirm Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 